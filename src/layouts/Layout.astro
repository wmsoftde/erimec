---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'ERIMEC — Präzisionsmessgeräte',
  description = 'ERIMEC ist Ihr zuverlässiger Partner für hochwertige Messgeräte und Messtechnik. Qualität, Erfahrung und Innovation seit über 25 Jahren.',
} = Astro.props;

const path = Astro.url.pathname;

const navLinks = [
  { href: '/',          label: 'Start' },
  { href: '/produkte',  label: 'Produkte' },
  { href: '/kontakt',   label: 'Kontakt' },
];
---

<!DOCTYPE html>
<html lang="de" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=DM+Sans:ital,opsz,wght@0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;1,9..40,400&display=swap"
    rel="stylesheet"
  />
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
</head>

<body class="bg-bg text-text font-sans antialiased overflow-x-hidden">

  <!-- ── Navigation ─────────────────────────────────────────── -->
  <header
    id="site-header"
    class="fixed top-0 left-0 right-0 z-50 transition-all duration-500"
  >
    <!-- Top accent line -->
    <div class="h-px bg-amber w-full"></div>

    <div class="backdrop-blur-md bg-bg/85 border-b border-line/60">
      <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">

        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 group shrink-0">
          <!-- Icon mark -->
          <div class="relative w-9 h-9 border border-amber/60 flex items-center justify-center group-hover:border-amber transition-colors duration-300">
            <div class="absolute top-0 left-0 w-2 h-2 border-t border-l border-amber"></div>
            <div class="absolute bottom-0 right-0 w-2 h-2 border-b border-r border-amber"></div>
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" class="animate-glow">
              <circle cx="9" cy="9" r="3" fill="#C8820A"/>
              <circle cx="9" cy="9" r="6" stroke="#C8820A" stroke-width="0.5" stroke-dasharray="2 2"/>
              <line x1="9" y1="0" x2="9" y2="4" stroke="#C8820A" stroke-width="1"/>
              <line x1="9" y1="14" x2="9" y2="18" stroke="#C8820A" stroke-width="1"/>
              <line x1="0" y1="9" x2="4" y2="9" stroke="#C8820A" stroke-width="1"/>
              <line x1="14" y1="9" x2="18" y2="9" stroke="#C8820A" stroke-width="1"/>
            </svg>
          </div>
          <!-- Name -->
          <div class="leading-tight">
            <div class="font-display text-2xl tracking-[0.2em] text-text group-hover:text-amber-bright transition-colors duration-300">ERIMEC</div>
            <div class="text-[9px] tracking-[0.35em] text-text-dim uppercase hidden sm:block">Messgeräte Handel</div>
          </div>
        </a>

        <!-- Desktop nav -->
        <nav class="hidden md:flex items-center gap-8">
          {navLinks.map(({ href, label }) => (
            <a
              href={href}
              class={`relative text-xs tracking-[0.25em] uppercase transition-colors duration-200 py-1 group ${
                path === href
                  ? 'text-amber'
                  : 'text-text-dim hover:text-text'
              }`}
            >
              {label}
              <span
                class={`absolute -bottom-px left-0 h-px bg-amber transition-all duration-300 ${
                  path === href ? 'w-full' : 'w-0 group-hover:w-full'
                }`}
              ></span>
            </a>
          ))}
          <a
            href="/kontakt"
            class="border border-amber/70 text-amber text-xs tracking-[0.2em] uppercase px-5 py-2 hover:bg-amber hover:text-bg transition-all duration-300 hover:border-amber"
          >
            Anfrage
          </a>
        </nav>

        <!-- Mobile hamburger -->
        <button
          id="hamburger"
          aria-label="Menü öffnen"
          class="md:hidden flex flex-col gap-[5px] p-2 group"
        >
          <span id="hb1" class="w-6 h-px bg-text transition-all duration-300 origin-center"></span>
          <span id="hb2" class="w-6 h-px bg-text transition-all duration-300"></span>
          <span id="hb3" class="w-4 h-px bg-amber transition-all duration-300 self-end origin-center"></span>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden bg-surface border-b border-line"
    >
      <nav class="flex flex-col py-2">
        {navLinks.map(({ href, label }) => (
          <a
            href={href}
            class={`px-6 py-3 text-xs tracking-[0.25em] uppercase transition-colors duration-200 ${
              path === href
                ? 'text-amber border-l-2 border-amber pl-5'
                : 'text-text-dim hover:text-text'
            }`}
          >
            {label}
          </a>
        ))}
        <div class="px-6 py-4">
          <a
            href="/kontakt"
            class="block text-center border border-amber/70 text-amber text-xs tracking-[0.2em] uppercase px-4 py-3 hover:bg-amber hover:text-bg transition-all duration-300"
          >
            Anfrage stellen
          </a>
        </div>
      </nav>
    </div>
  </header>

  <!-- ── Page Content ────────────────────────────────────────── -->
  <main class="pt-16 min-h-screen">
    <slot />
  </main>

  <!-- ── Footer ─────────────────────────────────────────────── -->
  <footer class="border-t border-line mt-32 bg-surface/40">
    <!-- Top bar -->
    <div class="h-px bg-gradient-to-r from-transparent via-amber/40 to-transparent"></div>

    <div class="max-w-7xl mx-auto px-6 py-16">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-10 mb-12">

        <!-- Brand -->
        <div class="md:col-span-2">
          <div class="flex items-center gap-3 mb-5">
            <div class="relative w-7 h-7 border border-amber/60 flex items-center justify-center">
              <div class="w-3 h-3 bg-amber/80"></div>
              <div class="absolute top-0 left-0 w-1.5 h-1.5 border-t border-l border-amber"></div>
              <div class="absolute bottom-0 right-0 w-1.5 h-1.5 border-b border-r border-amber"></div>
            </div>
            <span class="font-display text-xl tracking-[0.2em] text-text">ERIMEC</span>
          </div>
          <p class="text-text-dim text-sm leading-relaxed max-w-xs">
            Ihr Spezialist für Präzisionsmessgeräte. Hochwertige Messtechnik für Industrie, Forschung und Wissenschaft seit 1998.
          </p>
          <div class="mt-5 flex gap-1 items-center">
            <span class="w-6 h-px bg-amber"></span>
            <span class="text-[10px] tracking-[0.3em] text-amber uppercase">Qualität · Präzision · Zuverlässigkeit</span>
          </div>
        </div>

        <!-- Nav -->
        <div>
          <h4 class="font-display tracking-[0.25em] text-amber text-xs mb-5">Navigation</h4>
          <ul class="space-y-3">
            {navLinks.map(({ href, label }) => (
              <li>
                <a href={href} class="text-text-dim hover:text-text text-sm tracking-wide transition-colors duration-200 flex items-center gap-2 group">
                  <span class="w-3 h-px bg-muted group-hover:bg-amber transition-colors duration-200"></span>
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Legal -->
        <div>
          <h4 class="font-display tracking-[0.25em] text-amber text-xs mb-5">Rechtliches</h4>
          <ul class="space-y-3">
            {[
              { href: '/impressum',   label: 'Impressum' },
              { href: '/datenschutz', label: 'Datenschutz' },
              { href: '/kontakt',     label: 'Kontakt' },
            ].map(({ href, label }) => (
              <li>
                <a href={href} class="text-text-dim hover:text-text text-sm tracking-wide transition-colors duration-200 flex items-center gap-2 group">
                  <span class="w-3 h-px bg-muted group-hover:bg-amber transition-colors duration-200"></span>
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Bottom bar -->
      <div class="border-t border-line pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-muted text-[11px] tracking-[0.2em] uppercase">
          © {new Date().getFullYear()} ERIMEC Messgeräte Handel — Alle Rechte vorbehalten
        </p>
        <div class="flex items-center gap-2">
          <span class="w-1 h-1 bg-amber rounded-full animate-blink"></span>
          <p class="text-muted text-[11px] tracking-widest uppercase">System Online</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Mobile menu script -->
  <script>
    const hamburger = document.getElementById('hamburger');
    const mobileMenu = document.getElementById('mobile-menu');
    const hb1 = document.getElementById('hb1')!;
    const hb2 = document.getElementById('hb2')!;
    const hb3 = document.getElementById('hb3')!;
    let menuOpen = false;

    hamburger?.addEventListener('click', () => {
      menuOpen = !menuOpen;
      mobileMenu?.classList.toggle('hidden', !menuOpen);
      if (menuOpen) {
        hb1.style.transform = 'translateY(6px) rotate(45deg)';
        hb2.style.opacity   = '0';
        hb3.style.transform = 'translateY(-6px) rotate(-45deg)';
        hb3.style.width     = '24px';
      } else {
        hb1.style.transform = '';
        hb2.style.opacity   = '';
        hb3.style.transform = '';
        hb3.style.width     = '';
      }
    });
  </script>

</body>
</html>
